<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="20dp" >
    
    <View
        android:id="@+id/divider"
		android:layout_width="match_parent"
		android:layout_height="40dp"
		android:background="#8b9dc3"
		android:layout_alignParentTop="true" />
    
    <ImageView 
        android:id="@+id/event_imgView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/divider"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:scaleType="fitXY" />
    
    <TextView 
        android:id="@+id/eventName_txtView"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_imgView"
        android:layout_below="@id/divider"
        android:paddingTop="20dp"
        android:paddingBottom="10dp" />
    
    <TextView 
        android:id="@+id/eventPlace_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_imgView"
        android:layout_below="@id/eventName_txtView" />
    
    <TextView 
        android:id="@+id/eventDate_txtView"
        android:textStyle="italic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/event_imgView"
        android:layout_below="@id/eventPlace_txtView" />
    
    <TextView 
        android:id="@+id/eventFree_txtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_below="@id/eventPlace_txtView"
		android:paddingRight="10dp" />
    
</RelativeLayout>
